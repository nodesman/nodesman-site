<div class="block">
  <div class="block-title pages-list-title">
    <h2><strong>Edit Page</strong></h2>
  </div>
  <div class="form-bordered form-horizontal">
    <div class="form-group">
      <label class="col-md-5">Title: </label>
      <div class="field col-md-6">
        <input type="text" name="title" class="form-control" />
      </div>
    </div>
    <div class="form-group">
      <label class="col-md-5">Content Type: </label>
      <div class="field col-md-6">
        <select name="content_type" class="form-control">
          <option>HTML</option>
          <option>Markdown</option>
        </select>
      </div>
    </div>
    <div class="form-group">
      <label class="col-md-5">Page Type: </label>
      <div class="field col-md-6">
        <select name="content_type" class="form-control">
          <option selected>Default</option>
          <option>Article</option>
        </select>
      </div>
    </div>
    <div class="form-group">
      <label class="col-md-5">URL Slug: </label>
      <div class="field col-md-6">
        <input type="text" name="title" class="form-control" />
      </div>
    </div>

    <div class="form-group">
      <label class="col-lg-12">Content: </label>
      <div class="field col-lg-12">
        <textarea class="form-control" name="content" rows="20" ></textarea>
      </div>
    </div>

    <div class="form-group form-actions">
      <div class="col-md-8 col-md-offset-4">
        <button type="submit" class="btn btn-sm btn-primary"><i class="fa fa-angle-right"></i> Submit</button>
        <button type="reset" class="btn btn-sm btn-warning"><i class="fa fa-repeat"></i> Reset</button>
      </div>
    </div>
  </div>

</div>
<% content_for :post_content do %>
    <%= javascript_include_tag 'home' %>

<% end %>

<% content_for :title do %>
    Nodesman - Web Developer
<% end %>

<% content_for :style do %>
    <%= stylesheet_link_tag "style" %>
<% end %>

<body id="bigWrapper" class="home" data-spy="scroll" data-target=".navbar-default" data-offset="100">

<header>
  <nav class="navbar navbar-default navbar-fixed-top" role="navigation" data-spy="affix" data-offset-top="50">
    <div class="container-fluid">
      <div class="navbar-header">
        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#navbar-collapse">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <a class="navbar-brand" href="index.html#">NODESMAN</a>
      </div>

      <div class="collapse navbar-collapse navbar-right" id="navbar-collapse">
        <%= render 'navigation' %>
      </div>
    </div>
  </nav>
</header>

<div class="ip-header">
  <div class="ip-logo">
    <%= image_tag 'logoWhite.png', :class => 'img-responsive preloaderLogo center-block', :alt => 'preloader' %>
  </div>
  <div class="ip-loader">
    <svg class="ip-inner" width="60px" height="60px" viewBox="0 0 80 80">
      <path class="ip-loader-circlebg" d="M40,10C57.351,10,71,23.649,71,40.5S57.351,71,40.5,71 S10,57.351,10,40.5S23.649,10,40.5,10z"/>
      <path id="ip-loader-circle" class="ip-loader-circle" d="M40,10C57.351,10,71,23.649,71,40.5S57.351,71,40.5,71 S10,57.351,10,40.5S23.649,10,40.5,10z"/>
    </svg>
  </div>
</div>

<div class="container overlay overlay-slidedown">

  <div class="row">

    <div class="overlay-section"></div>

    <div class="col-md-12 ">
      <a class="overlay-close">
        <br><br>
        <%= image_tag 'xsep.png', :class => 'img-responsive center-block', :data => { :toggle => 'tooltip' } , :title => 'Close' %>
      </a>
    </div>
  </div>
</div>

<section id="intro">
  <div class="black-overlay">
    <div class="container valign">

      <div class="row">
        <div class="col-md-12">
          <%= image_tag 'me.png', :class => 'img-responsive center-block introLogo', :alt => 'Raj' %>
        </div>
        <div class="col-md-12 text-center">
          <h1 class="main-title-heading">WEB DEVELOPER</h1>
        </div>

        <div class="col-md-12 text-center">
          <%= image_tag 'separatorWhite.png', :class => 'img-responsive center-block separator', :alt => 'separator' %>
        </div>
        <div class="col-md-6 col-md-offset-3 text-center">
          <p>
            I'm Raj. I create powerful web experiences.
          </p>

        </div>

      </div>
    </div>
  </div>
</section>
<section id="featured-works">

  <div class="container">
    <div class="row content">
      <div class="col-md-3 col-sm-12">
        <h4>LATEST POSTS</h4>
        <%= image_tag 'lineSeparatorBlack.png', :class => 'img-responsive lineSeparator', :alt => 'separator' %>
      </div>
      <div class=" col-md-9 col-sm-12 posts-list">
        <% @articles.each do |article| %>
            <div class="item">
              <%= link_to article_url(article.url_slug) do %>
                  <h2><%= article.title %></h2>
              <% end %>
            </div>
        <% end %>
      </div>
    </div>
  </div>
</section>
<section id="latest-posts">

  <div class="container">
    <div class="row content">

      <div class="col-md-9 col-sm-12">
        <div id="owl-featured" class="owl-carousel">
          <div class="featureWrapper">
            <div class="feature-inner">
              <%= image_tag 'portfolio/angularfeed-excerpt.png', :class => 'galleryImage', :alt => 'Thumbnail' %>
              <div class="caption-heading">
                <h5>AngularFeed</h5>

                <p>AngularJs based RSS feed reader that works entirely off the browser. Uses Rails 4 for proxying
                  requests for the feed content. </p>
                <a class="btn btn-default btn-black" id="trigger-overlay" href="<%= angular_feed_url %>">More</a>
              </div>
            </div>
          </div>

          <div class="col-md-3 col-sm-12">

            <%= image_tag 'lineSeparatorBlack.png', :class => 'img-responsive lineSeparator', :alt => 'separator' %>
          </div>
          <div class="featureWrapper">
            <div class="feature-inner">
              <%= image_tag 'portfolio/wpa-excerpt.png', :class => 'galeryImage', :alt => 'Thumbnail' %>
              <div class="caption-heading">
                <h5>WP Autoresponder</h5>

                <p>A complete Email Marketing application for WordPress that does everything</p>
                <a class="btn btn-default btn-black" id="trigger-overlay" href="<%= wpr_url %>">More</a>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
<div class="above-fold-image-loader">
  <img src="<%= image_url 'pictures/home-abovefold.jpg' %>"/>
</div>

<%= render 'footer' %>

<script>
    var hero_url = '<%= image_url 'pictures/home-abovefold.jpg' %>';
</script>